<%= form_with(model: [ @article, @article.comments.build ], local: true, html: { class: "comment-form"}) do |form| %>


<div class="comment-commenter-container text-primary mb-3">
  <strong>Commenting as <%= current_user.name %></strong>
</div>
<div class="comment-body-container">
  <%= form.label :body, "Comment" %><br>
  <%= form.text_area :body, rows: "4" %>
</div>
<div class="comment-footer">
  <%= form.submit class: "btn btn-primary btn-rounded" %>
</div>
<% end %>