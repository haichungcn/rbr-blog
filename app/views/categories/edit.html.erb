<div class="row text-center m-4">
  <div class="col-6 mx-auto">
    <p class="h1 text-info mb-3">Edit #<%= @category.name %></p>


    <%= form_with model: @category, local: true do |form| %>

    <% if @category.errors.any? %>
    <div class="alert alert-danger" role="alert" id="error_explanation">
      <p class="h4">
        <%= pluralize(@category.errors.count, "error") %> prohibited
        this category from being saved:
      </p>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="row my-3">
      <div class="col-12 text-center font-italic font-weight-bold text-muted">
        <%= form.label :name, "Name of the category:", class: "my-4" %>
      </div>
      <%= form.text_field :name, class: "form-control col-12 mx-auto", placeholder: "Name of the category", autofocus: true  %>
    </div>

    <div class="d-block my-4">
      <%= form.submit class: "btn btn-primary btn-rounded" %>
    </div>

    <% end %>
  </div>
</div>