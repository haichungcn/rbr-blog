<h1 class="text-info">Listing of Categories</h1>

<ul class="listing list-group" style="width:20rem;">
  <%= will_paginate %>
  <% @categories.each do |category| %>
  <li class="list-group-item article-title text-center">
    <%= link_to "#{category.name}", category_path(category) %>
  </li>
  <% end %>
  <%= will_paginate %>
</ul>