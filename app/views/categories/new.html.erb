<h1 class="text-info">Create new Category</h1>

<%= form_with model: @category, local: true do |form| %>

<% if @category.errors.any? %>
<div class="alert alert-danger" role="alert" id="error_explanation">
  <p class="h4 alert-title">
    <%= pluralize(@category.errors.count, "error") %> prohibited
    this category from being created:
  </p>
  <div class="alert-body">
    <ul>
      <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<div class="d-block form-group my-3">
  <div class="font-italic font-weight-bold text-muted">
    <%= form.label :name, "Category name" %>
  </div>
  <%= form.text_field :name, class: "form-control col-md-4 col-lg-3", placeholder: "Enter category name", autofocus: true  %>
</div>

<div class="form-group my-5">
  <%= form.submit class: "btn btn-primary btn-rounded mr-4" %>
  <%= link_to "Cancel", :back %>
</div>

<% end %>