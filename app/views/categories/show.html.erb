<div class="row text-center m-4">
  <div class="col-12">
    <p class="mb-3">
      <span class="h1 text-info">#<%= @category.name %></span>
    </p>
    <p class="display-5 mt-2"><%= link_to '📝', edit_category_path(@category), class: "text-decoration-none" %></p>
    <p class="h5 text-dark mb-5">All posts: </p>

    <% if @category.articles.any? %>
    <%= render @category.articles %>
    <% else %>
    <div class="mb-4">
      <em class="mb-4">There is no post in this category yet.</em>
    </div>
    <% end %>
  </div>
  <div class="col-12 my-3">
    <%= link_to '← Back', :back %>
  </div>
</div>